<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh sách người dùng</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th,
      td {
        padding: 10px;
        border: 1px solid #ccc;
        text-align: left;
      }
      th {
        background-color: #f2f2f2;
      }
      .action-buttons button {
        margin-right: 5px;
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      .edit-btn {
        background-color: #4caf50;
        color: white;
      }
      .delete-btn {
        background-color: #f44336;
        color: white;
      }
    </style>
  </head>
  <body>
    <h1>Danh sách người dùng</h1>
    <table>
      <thead>
        <tr>
          <th>STT</th>
          <th>Username</th>
          <th>Họ tên</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Role</th>
          <th>Giới tính</th>
          <th>Trạng thái</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% dataTable.forEach((user, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= user.username %></td>
          <td><%= user.last_name %> <%= user.first_name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.role %></td>
          <td><%= user.gender === '1' ? 'Nam' : 'Nữ' %></td>
          <td><%= user.status || 'Chưa rõ' %></td>
          <td class="action-buttons">
            <a href="/update-user?id=<%= user.id %>">
              <button class="edit-btn">Sửa</button>
            </a>
            <a
              href="/delete-user?id=<%= user.id %>"
              onclick="return confirm('Bạn có chắc chắn muốn xoá người dùng này không?');"
            >
              <button class="delete-btn">Xoá</button>
            </a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
